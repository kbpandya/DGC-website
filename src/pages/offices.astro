---
import Layout from '../layouts/Layout.astro';

const locations = [
  {
    name: "Main Office",
    address: "501 Rison St, Ste 130",
    city: "Danville, VA 24541",
    phone: "(434) 791-1152",
    tollFree: "(888) 791-9245",
    fax: "(434) 797-4745",
    hours: [
      { days: "Mon - Thu", time: "9:00 AM - 4:30 PM" },
      { days: "Friday", time: "9:00 AM - 12:30 PM" },
      { days: "Sat - Sun", time: "Closed" }
    ],
    mapEmbed: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3191.041682121414!2d-79.3948216!3d36.5934167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89ad0c3d3d3d3d3d%3A0x3d3d3d3d3d3d3d3d!2s501%20Rison%20St%20%23130%2C%20Danville%2C%20VA%2024541!5e0!3m2!1sen!2sus!4v1705790000000!5m2!1sen!2sus"
  },
  {
    name: "Endoscopy Center",
    address: "600 Cleveland St.",
    city: "Danville, VA 24541",
    phone: "(434) 791-2668",
    hours: [
      { days: "Mon - Thu", time: "7:45 AM - 3:30 PM" },
      { days: "Fri - Sun", time: "Closed" }
    ],
    mapEmbed: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3191.1!2d-79.39!3d36.59!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89ad0c3d3d3d3d3d%3A0x3d3d3d3d3d3d3d3d!2s600%20Cleveland%20St%2C%20Danville%2C%20VA%2024541!5e0!3m2!1sen!2sus!4v1705790000000!5m2!1sen!2sus"
  }
];
---

<Layout title="Our Offices" description="Visit Danville Gastroenterology Center at our Main Office or Endoscopy Center. Addresses, phone numbers, and office hours.">
  <section class="bg-secondary pt-40 pb-20 text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="container mx-auto px-4 relative z-10">
      <span class="text-accent font-bold tracking-wider uppercase text-sm mb-2 block">Contact Information</span>
      <h1 class="heading-1 text-primary mb-6">Our Offices</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        We provide specialized care across two convenient locations in Danville.
      </p>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 max-w-7xl mx-auto">
        {locations.map((loc) => (
          <div class="card overflow-hidden flex flex-col">
            <!-- Map Embed -->
            <div class="h-64 bg-gray-100 relative">
               <iframe 
                 src={loc.mapEmbed} 
                 class="absolute inset-0 w-full h-full border-0" 
                 allowfullscreen="" 
                 loading="lazy" 
                 referrerpolicy="no-referrer-when-downgrade"
                 title={`Map of ${loc.name}`}
               ></iframe>
            </div>
            
            <div class="p-10 flex-grow">
              <h2 class="text-3xl font-bold text-primary mb-6">{loc.name}</h2>
              
              <div class="grid md:grid-cols-2 gap-10">
                <!-- Address & Phone -->
                <div class="space-y-6">
                  <div class="flex gap-4">
                    <div class="bg-secondary p-2 rounded-lg text-primary h-fit">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900 text-sm uppercase tracking-wider mb-1">Address</h4>
                      <p class="text-gray-600 leading-relaxed">{loc.address}<br/>{loc.city}</p>
                    </div>
                  </div>
                  <div class="flex gap-4">
                    <div class="bg-secondary p-2 rounded-lg text-primary h-fit">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900 text-sm uppercase tracking-wider mb-1">Phone</h4>
                      <div class="text-gray-600 space-y-1">
                        <p><a href={`tel:${loc.phone.replace(/\D/g,'')}`} class="hover:text-primary transition-colors font-medium">{loc.phone}</a></p>
                        {loc.tollFree && (
                          <p class="flex items-center gap-2">
                            <a href={`tel:${loc.tollFree.replace(/\D/g,'')}`} class="hover:text-primary transition-colors font-medium">{loc.tollFree}</a>
                            <span class="text-[10px] bg-gray-100 px-1.5 py-0.5 rounded text-gray-500 font-bold uppercase tracking-wide">Toll Free</span>
                          </p>
                        )}
                      </div>
                    </div>
                  </div>
                  {loc.fax && (
                    <div class="flex gap-4">
                      <div class="bg-secondary p-2 rounded-lg text-primary h-fit">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path></svg>
                      </div>
                      <div>
                        <h4 class="font-bold text-gray-900 text-sm uppercase tracking-wider mb-1">Fax</h4>
                        <p class="text-gray-600">{loc.fax}</p>
                      </div>
                    </div>
                  )}
                </div>

                <!-- Hours -->
                <div class="flex gap-4">
                  <div class="bg-secondary p-2 rounded-lg text-primary h-fit">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  </div>
                  <div class="flex-grow">
                    <h4 class="font-bold text-gray-900 text-sm uppercase tracking-wider mb-4">Office Hours</h4>
                    <ul class="space-y-3">
                      {loc.hours.map(h => (
                        <li class="flex justify-between text-sm border-b border-gray-50 pb-2 last:border-0">
                          <span class="text-gray-500">{h.days}</span>
                          <span class="font-semibold text-primary">{h.time}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <!-- Footer CTA within Card -->
            <div class="px-10 py-6 bg-gray-50 border-t border-gray-100">
               <button class="w-full btn-primary trigger-booking">Request Appointment at this Location</button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Emergency Note -->
  <section class="pb-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center p-8 bg-secondary/30 rounded-3xl border border-primary/5 flex flex-col items-center gap-4">
        <div class="bg-primary/10 p-3 rounded-full text-primary">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
        </div>
        <div>
          <h3 class="font-bold text-primary mb-2">Need immediate assistance?</h3>
          <p class="text-gray-600">For medical emergencies, please dial **911** immediately. For non-urgent clinical questions, please call our Main Office during business hours.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>