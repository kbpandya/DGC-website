---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative bg-primary text-white overflow-hidden">
    <div class="absolute inset-0 bg-black/40 z-10"></div>
    <div class="absolute inset-0 bg-[url('https://placehold.co/1920x800/004d66/FFFFFF?text=Medical+Background')] bg-cover bg-center"></div>
    
    <div class="relative z-20 container mx-auto px-4 py-32 md:py-48 flex flex-col items-start justify-center h-full">
      <h1 class="heading-1 mb-4 shadow-sm">
        Over 30 Years' Experience <br />
        in Digestive Health
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl text-gray-100">
        Providing compassionate, state-of-the-art gastroenterology care to Danville and surrounding areas.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/appointment" class="bg-accent hover:bg-orange-700 text-white font-bold py-4 px-8 rounded-full text-lg transition-transform hover:scale-105 shadow-lg text-center">
          Request Appointment
        </a>
        <a href="/services" class="bg-white hover:bg-gray-100 text-primary font-bold py-4 px-8 rounded-full text-lg transition-transform hover:scale-105 shadow-lg text-center">
          Our Services
        </a>
      </div>
    </div>
  </section>

  <!-- Welcome / Intro -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="heading-2">Welcome to Danville Gastroenterology Center</h2>
        <p class="text-gray-600 mb-4 leading-relaxed">
          Our mission is to provide the highest quality medical care to our patients. We specialize in the diagnosis and treatment of diseases of the digestive tract and liver.
        </p>
        <p class="text-gray-600 mb-6 leading-relaxed">
          With two experienced physicians and a dedicated support staff, we ensure that every patient receives personalized attention and the best possible outcome.
        </p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-center gap-3 text-gray-700">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            Same-Day Appointments Available
          </li>
          <li class="flex items-center gap-3 text-gray-700">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            State-of-the-Art Procedure Center
          </li>
          <li class="flex items-center gap-3 text-gray-700">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            Accepting New Patients
          </li>
        </ul>
        <a href="/about" class="text-primary font-bold hover:underline flex items-center gap-2 group">
          Learn more about our practice
          <span class="transform group-hover:translate-x-1 transition-transform">&rarr;</span>
        </a>
      </div>
      <div class="rounded-2xl overflow-hidden shadow-2xl transform md:rotate-2 hover:rotate-0 transition-transform duration-500">
        <img src="https://placehold.co/800x600/e6f7fa/004d66?text=Center+Building+or+Team" alt="Danville Gastroenterology Center Team" class="w-full h-auto object-cover" />
      </div>
    </div>
  </section>

  <!-- Services Highlight -->
  <section class="py-16 bg-secondary">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="heading-2">Our Medical Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We offer a comprehensive range of gastroenterology services to maintain your health and well-being.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {[
          { title: 'Colonoscopy', icon: 'ðŸ”', desc: 'Screening for colon cancer and evaluation of intestinal symptoms.' },
          { title: 'Upper Endoscopy', icon: 'ðŸ”¬', desc: 'Examination of the upper digestive tract to diagnose issues.' },
          { title: 'Liver Disease', icon: 'ðŸ©º', desc: 'Management of hepatitis, fatty liver, and other hepatic conditions.' },
        ].map(service => (
          <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-shadow border border-gray-100">
            <div class="text-4xl mb-4">{service.icon}</div>
            <h3 class="heading-3">{service.title}</h3>
            <p class="text-gray-600 mb-6">{service.desc}</p>
            <a href="/services" class="text-primary-light font-bold hover:text-primary text-sm uppercase tracking-wide">Read More</a>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/services" class="inline-block border-2 border-primary text-primary font-bold py-3 px-8 rounded-full hover:bg-primary hover:text-white transition-colors">
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- Meet the Doctors -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="heading-2">Meet Our Physicians</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-12 max-w-4xl mx-auto">
        <!-- Dr. Pandya -->
        <div class="flex flex-col items-center text-center group">
          <div class="w-64 h-64 rounded-full overflow-hidden mb-6 border-4 border-secondary group-hover:border-accent transition-colors shadow-lg">
             <img src="https://placehold.co/400x400/004d66/FFFFFF?text=Dr.+Pandya" alt="Dr. Bhushan H. Pandya" class="w-full h-full object-cover" />
          </div>
          <h3 class="text-2xl font-bold text-primary">Dr. Bhushan H. Pandya</h3>
          <p class="text-accent font-medium mb-4">Gastroenterologist</p>
          <p class="text-gray-600 mb-6">Board certified with decades of experience in treating complex GI conditions.</p>
          <a href="/about/dr-pandya" class="text-primary font-bold hover:underline">View Profile</a>
        </div>

        <!-- Dr. Patel -->
        <div class="flex flex-col items-center text-center group">
          <div class="w-64 h-64 rounded-full overflow-hidden mb-6 border-4 border-secondary group-hover:border-accent transition-colors shadow-lg">
             <img src="https://placehold.co/400x400/004d66/FFFFFF?text=Dr.+Patel" alt="Dr. Mukesh B. Patel" class="w-full h-full object-cover" />
          </div>
          <h3 class="text-2xl font-bold text-primary">Dr. Mukesh B. Patel</h3>
          <p class="text-accent font-medium mb-4">Gastroenterologist</p>
          <p class="text-gray-600 mb-6">Specializing in advanced endoscopic procedures and patient-centered care.</p>
          <a href="/about/dr-patel" class="text-primary font-bold hover:underline">View Profile</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Schedule Your Visit?</h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Don't delay your digestive health. Contact us today to set up an appointment with our specialists.
      </p>
      <a href="/contact" class="bg-white text-primary font-bold py-4 px-10 rounded-full text-lg shadow-lg hover:bg-gray-100 transition-colors">
        Contact Us
      </a>
    </div>
  </section>
</Layout>