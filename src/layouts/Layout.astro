---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AppointmentModal from '../components/AppointmentModal.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Danville Gastroenterology Center - Over 30 Years' Experience in Digestive Health." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={`${base}/favicon.png`} />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Danville Gastroenterology Center</title>
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={`${title} | Danville Gastroenterology Center`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL('/og-image.jpg', Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={`${title} | Danville Gastroenterology Center`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL('/og-image.jpg', Astro.url)} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="flex flex-col min-h-screen">
		<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:z-[100] focus:bg-white focus:p-4 focus:text-primary focus:font-bold focus:shadow-xl focus:rounded-b-xl focus:left-1/2 focus:-translate-x-1/2">
			Skip to main content
		</a>
		<Header />
		
		<main id="main-content" class="flex-grow">
			<slot />
		</main>

		<Footer />
		<AppointmentModal />

		<script>
			// Centralized booking modal trigger logic
			document.addEventListener('click', (e) => {
				const target = e.target as HTMLElement;
				const trigger = target.closest('.trigger-booking');
				if (trigger) {
					e.preventDefault();
					document.dispatchEvent(new CustomEvent('open-booking-modal'));
				}
			});
		</script>
	</body>
</html>
