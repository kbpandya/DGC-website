---
import Layout from '../layouts/Layout.astro';

const testimonials = [
  {
    quote: "Dr Patel and the nurse staff were awesome. Thank you for your kindness.",
    author: "Elizabeth P"
  },
  {
    quote: "Super wonderful procedure done everything was top quality totally friendly environment I would go there any time excellent treatment had a great time and would recommend other people to go",
    author: "Glenn E. B."
  },
  {
    quote: "Excellent place to go to get your procedures done Dr Patel and Dr Pandya are wonderful doctors.",
    author: "Bonnie B."
  },
  {
    quote: "The staff is caring, efficient, and professional.",
    author: "Gary"
  },
  {
    quote: "Once my husband went back for the colonoscopy the process went quickly. Everyone was super nice and friendly. The doctor came in and talked to us and my husband was ready to leave about 30 minutes after the procedure.",
    author: "Kristina A."
  },
  {
    quote: "Amazing staff, including new training staff. Procedure was wonderful. No issues. Even took out my nose ring for me",
    author: "Ilesha D."
  },
  {
    quote: "Everyone was very nice. I love Dr. Pandya.",
    author: "Rebecca B."
  },
  {
    quote: "Professional and friendly staff",
    author: "Linda C."
  }
];
---

<Layout title="Patient Testimonials" description="Read testimonials from patients of Danville Gastroenterology Center. Our 4.2-star average reflects our commitment to compassionate care.">
  <!-- Hero Section -->
  <section class="bg-secondary pt-40 pb-20 text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="container mx-auto px-4 relative z-10">
      <span class="text-accent font-bold tracking-wider uppercase text-sm mb-2 block">Patient Feedback</span>
      <h1 class="heading-1 text-primary mb-6">Patient Testimonials</h1>
      
      <!-- Rating Highlight -->
      <div class="flex flex-col items-center gap-2">
        <div class="flex text-accent text-2xl">
          {[1, 2, 3, 4].map(() => <span>★</span>)}
          <span class="relative">
            <span class="opacity-30">★</span>
            <span class="absolute inset-0 overflow-hidden w-[20%] text-accent">★</span>
          </span>
        </div>
        <p class="text-gray-600 font-semibold text-lg">4.2 / 5 Average Rating</p>
      </div>
    </div>
  </section>

  <!-- Testimonials Grid -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-8 max-w-7xl mx-auto">
        {testimonials.map((t) => (
          <div class="card p-8 italic text-gray-600 w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.33%-1.5rem)] max-w-md flex flex-col justify-between">
            <p class="mb-6 leading-relaxed">"{t.quote}"</p>
            <span class="font-bold text-primary not-italic border-t border-gray-100 pt-4 block text-sm">— {t.author}</span>
          </div>
        ))}
      </div>

      <!-- External Links -->
      <div class="text-center mt-20 space-y-6">
        <h2 class="heading-3">Share Your Experience</h2>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://www.google.com/search?q=Danville+Gastroenterology+Center#lrd=0x89ad0c3d3d3d3d3d:0x3d3d3d3d3d3d3d3d,10" target="_blank" rel="noopener noreferrer" class="btn-primary">
            Write a Google Review
          </a>
          <a href="https://www.google.com/search?q=Danville+Gastroenterology+Center#lrd=0x89ad0c3d3d3d3d3d:0x3d3d3d3d3d3d3d3d,1" target="_blank" rel="noopener noreferrer" class="btn-outline">
            Read More on Google
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>