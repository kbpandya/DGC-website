---
import Layout from '../../layouts/Layout.astro';

const rights = [
  "Receive considerate, respectful, and safe care free from abuse or harassment.",
  "Participate in discussions about your illness, treatment options, and likely outcomes.",
  "Know the names and professional roles of your healthcare providers.",
  "Receive respectful and effective management of pain.",
  "Be informed of and participate in decisions regarding your medical care, including the right to refuse treatment.",
  "Full consideration of personal privacy and confidentiality of your medical information.",
  "Review your own medical record and receive explanations for any part of it.",
  "Voice concerns or complaints and receive a timely response."
];

const responsibilities = [
  "Provide accurate and complete information about your health history and medications.",
  "Ask questions when you do not understand your treatment or what is expected of you.",
  "Participate in developing and following the agreed-upon treatment plan.",
  "Keep your appointments or notify the office in advance if you cannot.",
  "Accept financial responsibility for your care and provide necessary insurance information.",
  "Be respectful of our staff, physicians, and other patients.",
  "Provide a responsible adult for transportation if you are receiving sedation."
];
---

<Layout title="Patient Rights & Responsibilities" description="Understand your rights as a patient and your responsibilities for care at Danville Gastroenterology Center.">
  <section class="bg-secondary pt-40 pb-20 relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
      <h1 class="heading-1 text-primary">Rights & Responsibilities</h1>
      <p class="text-xl text-gray-600 max-w-2xl">
        We are committed to a partnership based on mutual respect and shared decision-making.
      </p>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto space-y-24">
        
        <!-- Rights -->
        <div>
          <div class="flex items-center gap-4 mb-8">
            <div class="h-1.5 w-12 bg-accent rounded-full"></div>
            <h2 class="heading-2 mb-0">Your Rights</h2>
          </div>
          <div class="grid gap-6">
            {rights.map(right => (
              <div class="flex gap-4 p-6 bg-gray-50 rounded-2xl border border-gray-100 items-start">
                <div class="text-accent text-xl mt-1">✓</div>
                <p class="text-gray-700 leading-relaxed">{right}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Responsibilities -->
        <div>
          <div class="flex items-center gap-4 mb-8">
            <div class="h-1.5 w-12 bg-primary rounded-full"></div>
            <h2 class="heading-2 mb-0">Your Responsibilities</h2>
          </div>
          <div class="grid gap-6">
            {responsibilities.map(item => (
              <div class="flex gap-4 p-6 bg-secondary/20 rounded-2xl border border-primary/5 items-start">
                <div class="text-primary text-xl mt-1">→</div>
                <p class="text-gray-700 leading-relaxed">{item}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Grievance Policy -->
        <div class="bg-gray-900 text-white p-12 rounded-3xl shadow-2xl relative overflow-hidden">
          <div class="absolute top-0 right-0 p-8 opacity-10">
            <svg class="w-24 h-24" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
          </div>
          <h3 class="text-2xl font-bold mb-6">Concerns or Complaints?</h3>
          <p class="text-gray-300 mb-8 leading-relaxed max-w-2xl">
            If you have questions or concerns about your care, please contact our Practice Administrator at **(434) 791-1152**. We are dedicated to resolving any issues promptly.
          </p>
          <div class="text-sm text-gray-400 space-y-2">
            <p>If your concern remains unresolved, you may contact:</p>
            <p class="font-semibold text-white">Virginia State Medical Board: 1-800-533-1560</p>
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>