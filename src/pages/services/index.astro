---
import Layout from '../../layouts/Layout.astro';
import { servicesData } from '../../data/services';
---

<Layout title="Our Services" description="Comprehensive gastroenterology services including Colonoscopy, Endoscopy, and Liver Disease management in Danville, VA.">
  
  <!-- Page Header - Added pt-40 to clear header -->
  <section class="bg-secondary pt-40 pb-20 relative overflow-hidden">
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="heading-1 mb-4 text-primary">Our Medical Services</h1>
      <p class="text-xl text-description max-w-2xl mx-auto">
        Providing advanced diagnostic and therapeutic care for your digestive health. From routine screenings to complex disease management, we are here for you.
      </p>
    </div>
  </section>

  <!-- Service Categories -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 space-y-32">
      
      {servicesData.map((category) => (
        <div class="scroll-mt-24">
          <div class="mb-16 text-center max-w-3xl mx-auto">
            <h2 class="heading-2 mb-4">{category.title}</h2>
            <div class="w-16 h-1 bg-accent mx-auto mb-6 rounded-full"></div>
            <p class="text-xl text-description">{category.description}</p>
          </div>

          <div class="flex flex-wrap justify-center gap-8 max-w-6xl mx-auto">
            {category.services.map((service) => (
              <a 
                href={service.href} 
                class="card p-8 card-hover flex flex-col items-start h-full group w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.33%-1.5rem)] max-w-md"
              >
                <!-- Widened Icon Container -->
                <div class="w-16 h-16 bg-secondary rounded-lg flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}></path></svg>
                </div>
                <h3 class="heading-3 group-hover:text-accent transition-colors">{service.title}</h3>
                <p class="text-description mb-6 flex-grow">
                  {service.description}
                </p>
                <!-- Fixed Hover Jitter -->
                <span class="text-primary font-semibold text-sm uppercase tracking-wide flex items-center gap-2 group/link">
                  View Details <span class="text-lg transform group-hover:translate-x-1 transition-transform">â€º</span>
                </span>
              </a>
            ))}
          </div>
        </div>
      ))}

    </div>
  </section>

  <!-- FAQ / Common Symptoms CTA -->
  <section class="py-24 bg-primary text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="heading-2 text-white mb-6">Not sure what you need?</h2>
      <p class="text-lg text-blue-50 mb-8 max-w-2xl mx-auto">
        Digestive symptoms can be complex. If you are experiencing persistent heartburn, abdominal pain, or changes in bowel habits, don't wait.
      </p>
      <div class="flex justify-center gap-4">
        <button class="bg-white text-primary font-semibold py-3 px-8 rounded-full shadow-lg hover:bg-gray-100 transition-colors trigger-booking">
          Schedule a Consultation
        </button>
      </div>
    </div>
  </section>

</Layout>
