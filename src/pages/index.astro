---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import drPandyaImg from '../assets/doctors/dr-pandya.webp';
import drPatelImg from '../assets/doctors/dr-patel.webp';
import { allServices } from '../data/services';

const highlightedServices = allServices.filter(s => 
  ['Colonoscopy', 'Upper Endoscopy', 'Liver Disease'].includes(s.title)
);
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative bg-primary text-white overflow-hidden min-h-[85vh] flex items-center">
    <!-- Background Image with Modern Gradient Overlay -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-[var(--color-primary)] via-[var(--color-primary)]/80 to-transparent z-10"></div>
        <div class="absolute inset-0 bg-[url('https://placehold.co/1920x1080/004d66/FFFFFF?text=Medical+Care')] bg-cover bg-center mix-blend-overlay opacity-50"></div>
    </div>
    
    <div class="relative z-20 container mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">
      <div class="animate-fade-in-up">
        <span class="inline-block py-1 px-3 rounded-full bg-accent/10 text-accent-dark border border-accent/20 text-sm font-bold mb-6 tracking-wide uppercase">
          Trusted Since 1995
        </span>
        <h1 class="heading-1 mb-6 text-shadow">
          Advanced Digestive <br/>
          <span class="text-accent-dark">Health Care</span>
        </h1>
        <p class="text-lg md:text-xl mb-10 text-gray-100 max-w-lg leading-relaxed opacity-90">
          State-of-the-art gastroenterology services delivered with compassion. We are dedicated to your long-term health and comfort.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="btn-primary text-center trigger-booking">
            Book Appointment
          </button>
          <a href="/services" class="btn-secondary text-center">
            Explore Services
          </a>
        </div>
      </div>
      <!-- Hero Image / Visual Interest -->
      <div class="hidden md:block relative animate-fade-in-up delay-200">
         <div class="absolute -inset-4 bg-accent/20 rounded-full blur-3xl opacity-30"></div>
      </div>
    </div>
  </section>

  <!-- Welcome / Intro - Clean & spacious -->
  <section class="py-24 bg-white relative overflow-hidden">
    <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-secondary/50 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 grid md:grid-cols-2 gap-16 items-center relative z-10">
      <div class="order-2 md:order-1 relative">
        <div class="absolute -inset-4 border-2 border-accent/10 rounded-2xl transform rotate-3"></div>
        <div class="rounded-2xl overflow-hidden shadow-2xl relative transform -rotate-2 hover:rotate-0 transition-transform duration-500">
             <Image 
                src="https://placehold.co/800x600/e6f7fa/004d66?text=Our+Clinic" 
                alt="Danville Gastroenterology Center Team" 
                width={800}
                height={600}
                widths={[400, 800, 1200]}
                sizes="(max-width: 768px) 100vw, 800px"
                decoding="async"
                loading="lazy"
                class="w-full h-auto object-cover" 
            />
        </div>
      </div>
      
      <div class="order-1 md:order-2">
        <h2 class="heading-2">Welcome to Danville Gastroenterology Center</h2>
        <p class="text-description mb-6 text-lg leading-relaxed">
          Our mission is to provide the highest quality medical care to our patients. We specialize in the diagnosis and treatment of diseases of the digestive tract and liver.
        </p>
        
        <div class="space-y-4 mb-8">
            <div class="flex items-start gap-4 p-4 rounded-xl bg-gray-50 hover:bg-secondary/30 transition-colors">
                <div class="bg-white p-2 rounded-full shadow-sm text-accent-dark">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <div>
                    <h4 class="font-semibold text-primary">Same-Day Appointments</h4>
                    <p class="text-sm text-description">Urgent care when you need it most.</p>
                </div>
            </div>
             <div class="flex items-start gap-4 p-4 rounded-xl bg-gray-50 hover:bg-secondary/30 transition-colors">
                <div class="bg-white p-2 rounded-full shadow-sm text-accent-dark">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <div>
                    <h4 class="font-semibold text-primary">Accepting New Patients</h4>
                    <p class="text-sm text-description">Easy onboarding process for all.</p>
                </div>
            </div>
        </div>

        <a href="/about" class="text-primary font-bold hover:text-accent-dark flex items-center gap-2 group transition-colors">
          Learn more about our practice
          <span class="transform group-hover:translate-x-1 transition-transform">&rarr;</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Services Highlight - Modern Cards -->
  <section class="py-24 bg-secondary relative">
    <!-- Decorative background pattern -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(#004d66 1px, transparent 1px); background-size: 20px 20px;"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <span class="text-accent-dark font-semibold tracking-wider uppercase text-sm mb-2 block">Comprehensive Care</span>
        <h2 class="heading-2">Our Medical Services</h2>
        <p class="text-description text-lg">We use the latest technology to provide accurate diagnoses and effective treatments for all digestive conditions.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {highlightedServices.map(service => (
          <a href={service.href} class="card p-8 card-hover flex flex-col items-start group">
            <div class="w-14 h-14 bg-secondary rounded-xl flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors duration-300">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}></path></svg>
            </div>
            <h3 class="heading-3 group-hover:text-accent-dark transition-colors">{service.title}</h3>
            <p class="text-description mb-8 flex-grow leading-relaxed">{service.shortDesc}</p>
            <span class="text-primary font-bold hover:text-accent-dark flex items-center gap-2 transition-all group/link">
                Read More <span class="text-xl group-hover/link:translate-x-1 transition-transform">â€º</span>
            </span>
          </a>
        ))}
      </div>
      
      <div class="text-center mt-16">
        <a href="/services" class="btn-outline inline-flex">
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- Meet the Doctors - Clean Profiles -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="heading-2">Meet Our Physicians</h2>
        <div class="w-20 h-1.5 bg-accent mx-auto rounded-full"></div>
      </div>

      <div class="flex flex-wrap justify-center gap-10 max-w-6xl mx-auto">
        <!-- Dr. Pandya -->
        <a href="/about/dr-pandya" class="card p-6 flex flex-col md:flex-row gap-6 items-center md:items-start card-hover group w-full lg:w-[calc(50%-1.5rem)]">
            <div class="w-32 h-32 flex-shrink-0 rounded-full overflow-hidden border-4 border-secondary">
                 <Image 
                   src={drPandyaImg} 
                   alt="Dr. Bhushan H. Pandya" 
                   width={128} 
                   height={128}
                   widths={[128, 256]}
                   sizes="(max-width: 768px) 112px, 128px"
                   decoding="async"
                   class="w-full h-full object-cover object-top" 
                 />
            </div>
            <div class="text-center md:text-left">
                <h3 class="text-2xl font-bold text-primary mb-1 font-display group-hover:text-accent-dark transition-colors whitespace-nowrap">Dr. Bhushan H. Pandya</h3>
                <p class="text-accent-dark font-bold mb-6 uppercase tracking-wide text-sm">Gastroenterologist</p>
                <span class="inline-flex items-center gap-2 text-primary font-bold hover:text-accent-dark transition-colors group/link">
                  View Full Profile 
                  <span class="transform group-hover/link:translate-x-1 transition-transform">&rarr;</span>
                </span>
            </div>
        </a>

        <!-- Dr. Patel -->
        <a href="/about/dr-patel" class="card p-6 flex flex-col md:flex-row gap-6 items-center md:items-start card-hover group w-full lg:w-[calc(50%-1.5rem)]">
            <div class="w-32 h-32 flex-shrink-0 rounded-full overflow-hidden border-4 border-secondary">
                 <Image 
                   src={drPatelImg} 
                   alt="Dr. Mukesh B. Patel" 
                   width={128} 
                   height={128}
                   widths={[128, 256]}
                   sizes="(max-width: 768px) 112px, 128px"
                   decoding="async"
                   class="w-full h-full object-cover object-top" 
                 />
            </div>
            <div class="text-center md:text-left">
                <h3 class="text-2xl font-bold text-primary mb-1 font-display group-hover:text-accent-dark transition-colors whitespace-nowrap">Dr. Mukesh B. Patel</h3>
                <p class="text-accent-dark font-bold mb-6 uppercase tracking-wide text-sm">Gastroenterologist</p>
                <span class="inline-flex items-center gap-2 text-primary font-bold hover:text-accent-dark transition-colors group/link">
                  View Full Profile 
                  <span class="transform group-hover/link:translate-x-1 transition-transform">&rarr;</span>
                </span>
            </div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section - Modern Gradient -->
  <section class="py-24 bg-gradient-to-br from-primary to-[#003d52] text-white text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="container mx-auto px-4 relative z-10">
      <h2 class="heading-2 text-white mb-6">Ready to Prioritize Your Health?</h2>
      <p class="text-xl text-blue-50 mb-10 max-w-2xl mx-auto font-light">
        Don't delay your digestive health. Schedule a consultation with our experts today.
      </p>
      <button class="bg-white text-primary font-semibold py-4 px-12 rounded-full text-lg shadow-2xl hover:bg-gray-100 hover:scale-105 transition-all duration-300 trigger-booking">
        Contact Us Now
      </button>
    </div>
  </section>
</Layout>