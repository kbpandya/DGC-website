---
import Layout from '../../layouts/Layout.astro';

const resources = [
  {
    title: "Office Policies & Rights",
    description: "Review our office guidelines, patient rights, and responsibilities to ensure a productive and respectful visit.",
    href: "/patients/policies",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    title: "Procedure Instructions",
    description: "Step-by-step preparation guides for Colonoscopy, EGD, and other diagnostic procedures.",
    href: "/patients/instructions",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
  }
];
---

<Layout title="Patient Center" description="Resources for patients of Danville Gastroenterology Center. Access office policies and procedure instructions.">
  <!-- Hero Section -->
  <section class="bg-secondary pt-40 pb-20 relative overflow-hidden text-center">
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="container mx-auto px-4 relative z-10">
      <span class="text-accent font-bold tracking-wider uppercase text-sm mb-2 block">Patient Resources</span>
      <h1 class="heading-1 text-primary mb-6">Patient Center</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Everything you need to prepare for your appointment and manage your digestive health care with us.
      </p>
    </div>
  </section>

  <!-- Resource Grid -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {resources.map((item) => (
          <a href={item.href} class="group bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-xl hover:border-primary/20 transition-all duration-300 card-hover flex flex-col items-start">
            <div class="w-16 h-16 bg-secondary rounded-xl flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon}></path></svg>
            </div>
            <h3 class="heading-3 group-hover:text-accent transition-colors">{item.title}</h3>
            <p class="text-gray-600 mb-8 flex-grow leading-relaxed">
              {item.description}
            </p>
            <span class="text-primary font-bold text-sm uppercase tracking-wide flex items-center gap-2 group/link">
              Access Details <span class="text-lg transform group-hover:translate-x-1 transition-transform">â€º</span>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Appointment CTA -->
  <section class="py-24 bg-gray-50 border-y border-gray-100">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto bg-white p-12 rounded-3xl shadow-lg border border-gray-100">
        <h2 class="heading-2 mb-4">Ready to Schedule?</h2>
        <p class="text-lg text-gray-600 mb-10">
          Our specialists are here to provide the care and answers you need for your digestive health.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="btn-primary py-4 px-10 trigger-booking">Book Your Appointment</button>
          <a href="/contact" class="btn-outline py-4 px-10">Contact Our Office</a>
        </div>
      </div>
    </div>
  </section>
</Layout>