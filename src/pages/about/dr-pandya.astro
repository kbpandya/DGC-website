---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import drPandyaImg from '../../assets/doctors/dr-pandya.webp';
---

<Layout title="Dr. Bhushan H. Pandya" description="Profile of Dr. Bhushan H. Pandya, Gastroenterologist at Danville Gastroenterology Center.">
  <section class="bg-secondary pt-40 pb-20">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-12 items-center">
        <div class="w-64 h-64 rounded-2xl overflow-hidden shadow-xl">
          <Image src={drPandyaImg} alt="Dr. Bhushan H. Pandya" class="w-full h-full object-cover" />
        </div>
        <div>
          <h1 class="heading-1 text-primary">Dr. Bhushan H. Pandya</h1>
          <p class="text-xl text-accent font-semibold">Gastroenterologist</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="heading-2">Professional Profile</h2>
      <p class="text-gray-600 mb-6">Dr. Bhushan H. Pandya is a highly experienced gastroenterologist dedicated to providing compassionate care to the Danville community.</p>
      <!-- Add more bio content as needed -->
    </div>
  </section>
</Layout>
